{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user %}
        <div class="row">
            {{ form_start(form, {'action' : path('task_create')}) }}
                {{ form_widget(form) }}

                <button type="submit" class="btn btn-success pull-right">Ajouter</button>
            {{ form_end(form) }}

            <a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
        </div>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Vous n'avez pas les droits nécessaires à la visualisation de cette page. Merci de vous authentifier.
        </div>
    {% endif %}
{% endblock %}
